<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#1FA122"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AdGuard DNS"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Provider DNS"
                android:textColor="#F9FAFB"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/dnsProviderSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/providerDetailText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#D1D5DB"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/pingAllBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ping Semua DNS"
                    android:textAllCaps="false" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="1dp" />

                <Button
                    android:id="@+id/autoBestBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pilih Tercepat"
                    android:textAllCaps="false" />
            </LinearLayout>

            <TextView
                android:id="@+id/bestDnsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#A7F3D0"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/latencyListText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="#111111"
                android:padding="8dp"
                android:textColor="#9CA3AF"
                android:textSize="11sp"
                android:typeface="monospace" />

            <EditText
                android:id="@+id/dnsInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Private DNS host"
                android:textColor="#E5E7EB"
                android:textColorHint="#9CA3AF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/enableBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enable"
                    android:textAllCaps="false" />

                <Space
                    android:layout_width="6dp"
                    android:layout_height="1dp" />

                <Button
                    android:id="@+id/pingOneBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ping DNS"
                    android:textAllCaps="false" />

                <Space
                    android:layout_width="6dp"
                    android:layout_height="1dp" />

                <Button
                    android:id="@+id/disableBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Disable"
                    android:textAllCaps="false" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Firewall DNS Lock (anti bypass DNS biasa)"
                android:textColor="#F9FAFB"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/firewallEnableBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enable Lock"
                    android:textAllCaps="false" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="1dp" />

                <Button
                    android:id="@+id/firewallDisableBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Disable Lock"
                    android:textAllCaps="false" />
            </LinearLayout>

            <Button
                android:id="@+id/reloadBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Reload Status"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/outputText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#111111"
                android:padding="10dp"
                android:textColor="#D1D5DB"
                android:textSize="12sp"
                android:typeface="monospace" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
