<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#1FA122"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Call Guard"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <Switch
                android:id="@+id/blockUnknownSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Block unknown number calls (config mode)"
                android:textColor="#E5E7EB"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/activateDialerBtn"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_call_guard_button"
                    android:fontFamily="monospace"
                    android:paddingHorizontal="8dp"
                    android:text="Set\nDefault\nPhone"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="1dp" />

                <Button
                    android:id="@+id/activateScreeningBtn"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_call_guard_button"
                    android:fontFamily="monospace"
                    android:paddingHorizontal="8dp"
                    android:text="Activate\nScreening"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="1dp" />

                <Button
                    android:id="@+id/openCallSettingsBtn"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_call_guard_button"
                    android:fontFamily="monospace"
                    android:paddingHorizontal="8dp"
                    android:text="Open Call\nSettings"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/forceSetupRootBtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_call_guard_button"
                android:fontFamily="monospace"
                android:text="Force Setup via Root"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/loadRecentBtn"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_call_guard_button"
                    android:fontFamily="monospace"
                    android:text="Load Recent\nCalls"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="1dp" />

                <Button
                    android:id="@+id/requestCallLogBtn"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_call_guard_button"
                    android:fontFamily="monospace"
                    android:text="Grant Call Log"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Spinner
                android:id="@+id/recentSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#252525"
                android:popupBackground="#252525" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addRecentWhitelistBtn"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_call_guard_button"
                    android:fontFamily="monospace"
                    android:text="Recent ->\nWhitelist"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="1dp" />

                <Button
                    android:id="@+id/addRecentBlacklistBtn"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_call_guard_button"
                    android:fontFamily="monospace"
                    android:text="Recent ->\nBlacklist"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Risk Scoring (7 hari terakhir)"
                android:textColor="#F9FAFB"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/autoRiskSyncSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auto sync nomor berisiko ke blacklist"
                android:textColor="#E5E7EB"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/riskThresholdInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#252525"
                android:hint="70"
                android:inputType="number"
                android:textColor="#E5E7EB"
                android:textColorHint="#9CA3AF"
                android:textSize="34sp" />

            <Button
                android:id="@+id/analyzeRiskBtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_call_guard_button"
                android:fontFamily="monospace"
                android:text="Analyze &amp; Sync Risk"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/numberInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#252525"
                android:hint="Nomor telepon"
                android:inputType="phone"
                android:textColor="#E5E7EB"
                android:textColorHint="#9CA3AF"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addWhitelistBtn"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_call_guard_button"
                    android:fontFamily="monospace"
                    android:text="Add Whitelist"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="1dp" />

                <Button
                    android:id="@+id/addBlacklistBtn"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_call_guard_button"
                    android:fontFamily="monospace"
                    android:text="Add Blacklist"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/removeBtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_call_guard_button"
                android:fontFamily="monospace"
                android:text="Remove Number"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Whitelist"
                android:textColor="#F9FAFB"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/whitelistText"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/bg_call_guard_panel"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:padding="8dp"
                android:textColor="#D1D5DB"
                android:textSize="12sp"
                android:typeface="monospace" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Blacklist"
                android:textColor="#F9FAFB"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/blacklistText"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/bg_call_guard_panel"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:padding="8dp"
                android:textColor="#D1D5DB"
                android:textSize="12sp"
                android:typeface="monospace" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/reloadBtn"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_call_guard_button"
                    android:fontFamily="monospace"
                    android:text="Reload"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="1dp" />

                <Button
                    android:id="@+id/saveBtn"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_call_guard_button"
                    android:fontFamily="monospace"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/openCallLogMenuBtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_call_guard_button"
                android:fontFamily="monospace"
                android:text="Menu Log Telepon"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/exportDatasetBtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_call_guard_button"
                android:fontFamily="monospace"
                android:text="Export Dataset (ML)"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/outputText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_call_guard_panel"
                android:padding="10dp"
                android:textColor="#D1D5DB"
                android:textSize="12sp"
                android:typeface="monospace" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
